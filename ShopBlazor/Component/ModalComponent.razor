

<Modal @ref="@modal" Title=@title>
    <BodyTemplate>
        @childContent
    </BodyTemplate>
    <FooterTemplate>
        <Button Color="ButtonColor.Secondary" @onclick="OnHideModalClick">Tăt</Button>


        @if (OnHandleModalSaveClick != null)
        {
            <Button Color="ButtonColor.Primary" onclick="@OnHandleModalSaveClick">Lưu</Button>

        }

    </FooterTemplate>
</Modal>



@code {
    public Modal modal = default!;

    [Parameter]
    public string title { get; set; } = "Title";

    [Parameter]
    public RenderFragment? childContent { get; set; }

    [Parameter]

    public EventCallback OnModalSaveClick { get; set; }


    private async Task OnHandleModalSaveClick()
    {
        await OnModalSaveClick.InvokeAsync();
   
    }

    private async Task OnShowModalClick()
    {
        await modal.ShowAsync();
    }

    private async Task OnHideModalClick()
    {
        await modal.HideAsync();
    }
}