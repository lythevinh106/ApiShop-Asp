        if (confirmation)
        {

            PromotionResponse result =

             await PromotionApi.DeletePromotionById(
             PromotionId);

            if (result != null)
            {
                await callData();
                ToastService.Notify(new(ToastType.Success, $"Thong bao", "Xóa Thành Công"));
            }

        }
        else
        {
            // do something
        }

    }

